// --- SLITHER.IO TACTICAL CONSOLE V2.1 ---

(function() {
    // 1. CLEANUP
    var oldMenu = document.getElementById('hacker-console-v2');
    if (oldMenu) oldMenu.remove();

    // 2. UI CONSTRUCTION (Chu·∫©n Style V2.1)
    var htmlContent = `
    <div id="hacker-console-v2" style="
        position: fixed; 
        top: 100px; left: 100px; 
        width: 320px; 
        background: rgba(12, 12, 12, 0.95); 
        border: 1px solid #00ff00; 
        color: #00ff00; 
        font-family: 'Consolas', 'Courier New', monospace; 
        z-index: 9999999; 
        box-shadow: 0 0 15px rgba(0, 255, 0, 0.3);
        border-radius: 4px;
        font-size: 13px;">
        
        <div id="hacker-header" style="
            padding: 8px 10px; 
            background: linear-gradient(90deg, #003300, #001100); 
            cursor: move; 
            border-bottom: 1px solid #00ff00;
            display: flex; justify-content: space-between; align-items: center;
            user-select: none;">
            <span style="font-weight: bold; text-shadow: 0 0 5px #00ff00;">üêç SLITHER TACTICAL V2.1</span>
            <span style="font-size: 10px; color: #888;">[DRAG ME]</span>
        </div>

        <div style="padding: 15px;">
            
            <div style="margin-bottom: 15px;">
                <label style="font-size: 11px; color: #aaa; text-transform: uppercase; letter-spacing: 1px;">üëÅÔ∏è TACTICAL ZOOM</label>
                
                <div style="display: flex; gap: 8px; margin-top: 6px; height: 30px;">
                    <input type="range" id="rng-zoom" min="0.1" max="2" step="0.05" value="0.9" style="
                        flex: 1; accent-color: #00ff00; background: #333;">
                    
                    <span id="lbl-zoom-val" style="
                        flex: 0 0 40px; color: white; font-weight: bold; 
                        display: flex; align-items: center; justify-content: center; font-size: 11px;">
                        0.9
                    </span>
                </div>
                <div style="font-size: 10px; color: #888; margin-top: 3px;">*Scroll mouse or drag slider</div>
            </div>

            <hr style="border-color: #333; border-style: dashed; margin: 10px 0;">

            <div style="margin-bottom: 15px;">
                <label style="font-size: 11px; color: #aaa; text-transform: uppercase; letter-spacing: 1px;">‚ö° PERFORMANCE & VISUALS</label>
                
                <div style="margin-top: 8px; display: flex; flex-direction: column; gap: 6px;">
                    <label style="display: flex; align-items: center; cursor: pointer; user-select: none;">
                        <input type="checkbox" id="chk-kill-bg" style="margin-right: 8px; accent-color: #00ff00;"> 
                        <span>‚¨õ Remove Background (Black Mode)</span>
                    </label>

                    <label style="display: flex; align-items: center; cursor: pointer; user-select: none;">
                        <input type="checkbox" id="chk-kill-glow" style="margin-right: 8px; accent-color: #00ff00;"> 
                        <span>üî¶ Remove Glow (High FPS)</span>
                    </label>
                </div>
            </div>

             <div style="margin-bottom: 10px;">
                <label style="font-size: 11px; color: #aaa; text-transform: uppercase; letter-spacing: 1px;">üöÄ UTILITIES</label>
                <button id="btn-force-skin" style="
                    width: 100%; margin-top: 6px; padding: 8px; 
                    background: rgba(0, 255, 255, 0.1); color: cyan; border: 1px solid cyan; 
                    cursor: pointer; font-weight: bold; font-family: inherit; font-size: 11px;">
                    üîì FORCE UNLOCK SKINS
                </button>
            </div>


            <button id="btn-close-menu" style="
                width: 100%; margin-top: 5px; background: #330000; color: #ff4444; 
                border: 1px solid #ff4444; padding: 6px; cursor: pointer; font-family: inherit; font-size: 10px;">
                EXIT SYSTEM
            </button>
        </div>
    </div>
    `;

    // 3. INJECT UI
    var container = document.createElement('div');
    container.innerHTML = htmlContent;
    document.body.appendChild(container);

    // 4. REFERENCES
    var consoleDiv = document.getElementById('hacker-console-v2');
    var header = document.getElementById('hacker-header');
    var rngZoom = document.getElementById('rng-zoom');
    var lblZoomVal = document.getElementById('lbl-zoom-val');
    var chkKillBg = document.getElementById('chk-kill-bg');
    var chkKillGlow = document.getElementById('chk-kill-glow');
    var btnForceSkin = document.getElementById('btn-force-skin');
    var btnClose = document.getElementById('btn-close-menu');

    // 5. DRAGGABLE LOGIC (Reuse V2.1)
    var isDragging = false, offsetX, offsetY;
    header.onmousedown = function(e) { isDragging = true; offsetX = e.clientX - consoleDiv.offsetLeft; offsetY = e.clientY - consoleDiv.offsetTop; header.style.cursor = 'grabbing'; };
    document.onmousemove = function(e) { if (isDragging) { consoleDiv.style.left = (e.clientX - offsetX) + 'px'; consoleDiv.style.top = (e.clientY - offsetY) + 'px'; } };
    document.onmouseup = function() { isDragging = false; header.style.cursor = 'move'; };

    // 6. HACKING LOGIC (SLITHER SPECIFIC)

    // A. ZOOM LOGIC
    // Slither d√πng bi·∫øn 'gsc' (Global Scale) ƒë·ªÉ ch·ªânh zoom.
    // Hack: Ch√∫ng ta ghi ƒë√® gi√° tr·ªã n√†y li√™n t·ª•c.
    
    // Zoom Loop: C∆∞·ª°ng √©p game gi·ªØ m·ª©c zoom ta mu·ªën
    var targetZoom = 0.9;
    var zoomInterval = setInterval(function() {
        if (window.gsc) { // Ki·ªÉm tra bi·∫øn gsc c√≥ t·ªìn t·∫°i kh√¥ng
            window.gsc = targetZoom; 
        }
    }, 100);

    // X·ª≠ l√Ω thanh tr∆∞·ª£t
    rngZoom.oninput = function() {
        targetZoom = parseFloat(this.value);
        lblZoomVal.innerText = targetZoom;
    };

    // X·ª≠ l√Ω lƒÉn chu·ªôt (Mouse Wheel) ƒë·ªÉ zoom nh∆∞ game b·∫Øn s√∫ng
    document.body.onwheel = function(e) {
        if (e.deltaY < 0) { // LƒÉn l√™n -> Zoom v√†o
            targetZoom = Math.min(targetZoom + 0.05, 2);
        } else { // LƒÉn xu·ªëng -> Zoom ra
            targetZoom = Math.max(targetZoom - 0.05, 0.1);
        }
        rngZoom.value = targetZoom;
        lblZoomVal.innerText = targetZoom.toFixed(2);
    };

    // B. REMOVE BACKGROUND
    chkKillBg.onchange = function() {
        if (this.checked) {
            // Thay ƒë·ªïi ·∫£nh n·ªÅn th√†nh m√†u ƒëen
            if(window.ii) window.ii.src = ""; // X√≥a source ·∫£nh n·ªÅn
            document.body.style.background = "#000000";
            console.log(">> Background removed.");
        }
    };

    // C. REMOVE GLOW (TƒÉng FPS kinh ho√†ng)
    chkKillGlow.onchange = function() {
        // Slither v·∫Ω glow b·∫±ng c√°c layer canvas, ta c·∫ßn ch·∫∑n n√≥
        // ƒê√¢y l√† k·ªπ thu·∫≠t Hook v√†o Setting c·ªßa game (th∆∞·ªùng l√† 'm_q' = quality)
        if (this.checked) {
             // High FPS mode
             if(window.high_quality) window.high_quality = false;
             if(window.want_quality) window.want_quality = 0;
             console.log(">> Glow removed. FPS Boosted.");
        }
    };

    // D. UNLOCK SKINS
    btnForceSkin.onclick = function() {
        // Bi·∫øn localStorage l∆∞u tr·∫°ng th√°i share social
        // Game check: N·∫øu ƒë√£ share -> M·ªü skin
        localStorage.setItem('social-sharing', 1);
        localStorage.setItem('slither-skin', 1);
        
        // Reload nh·∫π UI game (n·∫øu c·∫ßn)
        Game.Notify("SKINS UNLOCKED", "Refresh page to choose new skins!", [21,1]);
        // L∆∞u √Ω: Slither c√≥ th·ªÉ c·∫ßn F5 ƒë·ªÉ load l·∫°i list skin
    };

    // E. CLOSE
    btnClose.onclick = function() {
        clearInterval(zoomInterval); // D·ª´ng √©p zoom
        document.body.onwheel = null; // Tr·∫£ l·∫°i chu·ªôt
        consoleDiv.remove();
    };

    // H√ÄM GI·∫¢ L·∫¨P NOTIFY (N·∫øu game ko c√≥ h√†m n√†y th√¨ d√πng alert)
    if (!window.Game) window.Game = {};
    if (!window.Game.Notify) window.Game.Notify = function(title, msg) { console.log(`[${title}] ${msg}`); };

    console.log("%c [SLITHER] Tactical Console V2.1 Injected.", "color: lime; font-weight: bold;");

})();
